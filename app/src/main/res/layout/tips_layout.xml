<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/tipTitle"
                android:text="What is spotting?"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_margin="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#dcdcdc"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tipContent"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:text="Spotting is defined as light vaginal bleeding that happens outside of your regular periods.
                    Typically, spotting involves small amounts of blood. You may notice it on toilet paper after youâ€™ve used the restroom, or in your underwear.
                    It usually only requires a panty liner if you need protection, not a pad or tampon.
           Bleeding or spotting any time other than when you have your period is considered abnormal vaginal bleeding, or intermenstrual bleeding."
                android:layout_margin="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/tipImageView"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"/>





        </LinearLayout>



    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>