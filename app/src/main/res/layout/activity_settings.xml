<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10dp"
        android:background="#f2f2f2"
        app:title="Settings"
        android:id="@+id/settingToolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#f2f2f2"
                app:cardElevation="6dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cycle and Ovulation"
                        android:padding="8dp"
                        android:layout_margin="5dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/grey"
                        android:layout_margin="10dp"/>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cycle Length"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:padding="5dp"
                            android:layout_margin="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/black" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent">

                            <Spinner
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:layout_gravity="end"
                                android:id="@+id/cycleSpinn"
                                android:gravity="right"
                                android:elevation="4dp"
                                android:tooltipText="cycle"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25 Days"
                                android:textSize="16sp"
                                android:id="@+id/current_cycle_display"
                                android:textAlignment="center"
                                android:padding="8dp"
                                android:textColor="@color/colorPrimary"/>



                        </FrameLayout>




                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Period Length"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:padding="5dp"
                            android:layout_margin="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/black" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent">


                            <Spinner
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_margin="5dp"
                                android:layout_gravity="end"
                                android:id="@+id/periodSpinn"
                                android:prompt="@string/prompt"
                                android:textColor="@android:color/transparent"
                                android:gravity="right"
                                android:elevation="4dp"
                                android:padding="8dp"
                                android:tooltipText="cycle"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/current_period_display"
                                android:text="4 Days"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:padding="8dp"
                                android:textColor="@color/colorPrimary"/>



                        </FrameLayout>




                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:layout_margin="5dp"
                        android:text="@string/cycle_ovulation"/>





                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#f2f2f2"
                android:elevation="10dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Display Settings"
                        android:padding="8dp"
                        android:layout_margin="5dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/grey"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Font Size"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Dark Mode"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:textColor="@color/black" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:layout_margin="5dp"
                        android:text="@string/customize_settings"/>





                </LinearLayout>
            </androidx.cardview.widget.CardView>






        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>